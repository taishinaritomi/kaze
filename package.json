{
  "name": "@kaze-style/monorepo",
  "version": "0.0.0",
  "author": "Taishi Naritomi",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "playground/*"
  ],
  "scripts": {
    "clean": "rimraf ./playground/**/.swc ./playground/**/.next ./{playground,packages}/**/dist*  ./{playground,packages}/**/.turbo ./packages/swc-plugin/target ./node_modules ./{playground,packages}/**/node_modules",
    "build": "turbo run build",
    "build:packages": "turbo run build --filter=./packages/*",
    "dev": "turbo run dev",
    "dev:packages": "turbo run dev --filter=./packages/*",
    "test": "run-p test:*",
    "test:vitest": "vitest run",
    "test:swc-plugin": "yarn workspace @kaze-style/swc-plugin run test",
    "code:fix": "run-s code:fix:*",
    "code:fix:swc-plugin": "yarn workspace @kaze-style/swc-plugin run code-fix",
    "code:fix:lint": "eslint . --fix --ignore-path .gitignore",
    "code:fix:format": "prettier . --write --ignore-path .gitignore",
    "code:check": "run-p code:check:*",
    "code:check:swc-plugin": "yarn workspace @kaze-style/swc-plugin run code-check",
    "code:check:type": "turbo run type-check --parallel",
    "code:check:lint": "eslint . --ignore-path .gitignore",
    "code:check:format": "prettier . --check --ignore-path .gitignore",
    "code:check:exports": "turbo run exports-check --filter=./packages/* --parallel",
    "readme:copy": "tsx scripts/readme.ts copy README.md",
    "readme:check": "tsx scripts/readme.ts check README.md",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@tsconfig/strictest": "^1.0.2",
    "@types/fs-extra": "^11.0.1",
    "@types/glob": "^8.0.1",
    "@types/node": "^18.11.19",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "@vitest/coverage-c8": "^0.28.4",
    "arg": "^5.0.2",
    "benny": "^3.7.1",
    "esbuild": "^0.17.6",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-unused-imports": "^2.0.0",
    "fs-extra": "^11.1.0",
    "glob": "^8.1.0",
    "gzip-size": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "picocolors": "^1.0.0",
    "prettier": "^2.8.3",
    "process": "^0.11.10",
    "publint": "^0.1.9",
    "rimraf": "^4.1.2",
    "tsx": "^3.12.3",
    "turbo": "^1.7.3",
    "typescript": "^4.9.5",
    "vitest": "^0.28.4"
  }
}
