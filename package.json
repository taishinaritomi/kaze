{
  "name": "kaze-style",
  "version": "0.0.0",
  "author": "Taishi Naritomi",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "playground/*"
  ],
  "scripts": {
    "clean": "rimraf **/dist* **/.next **/.turbo **/node_modules",
    "build": "turbo run build",
    "build:packages": "turbo run build --filter=./packages/*",
    "dev": "turbo run dev",
    "dev:packages": "turbo run dev --filter=./packages/*",
    "test": "vitest run",
    "code:fix": "run-s code:fix:*",
    "code:fix:lint": "eslint . --fix --ignore-path .gitignore",
    "code:fix:format": "prettier . --write --ignore-path .gitignore",
    "code:check": "run-p code:check:*",
    "code:check:type": "turbo run type-check --parallel",
    "code:check:lint": "eslint . --ignore-path .gitignore",
    "code:check:format": "prettier . --check --ignore-path .gitignore",
    "readme:copy": "tsx scripts/copyFileToPackages.ts README.md",
    "readme:check": "tsx scripts/checkFileToPackages.ts README.md",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.25.2",
    "@tsconfig/strictest": "^1.0.2",
    "@types/babel__helper-plugin-utils": "^7.10.0",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^8.0.0",
    "@types/node": "^18.11.9",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "@types/stylis": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vitest/coverage-c8": "^0.25.3",
    "arg": "^5.0.2",
    "benny": "^3.7.1",
    "esbuild": "^0.15.16",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "fs-extra": "^11.0.0",
    "glob": "^8.0.3",
    "gzip-size": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.0",
    "process": "^0.11.10",
    "rimraf": "^3.0.2",
    "tsx": "^3.12.1",
    "turbo": "^1.6.3",
    "typescript": "^4.9.3",
    "vitest": "^0.25.3"
  }
}
